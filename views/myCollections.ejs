<%- include base/header.ejs %>
<div class="main main-page">
   <div class="location clearfix user-manage">
        <h1><a href="" title="">我的收藏</a></h1>
   </div>
   <%if(result.posts.length>0){%>
   <div>
      <ul class="mycol-posts-lists">
      	<%result.posts.forEach(function(item){%>
      	<% if(item.delete==0){%>
      	<li class="myCollections-lists" data-id="<%=item.postID%>">
      	    <%if(item.post_name.length<7){%>
      		<a class="myCollect-post-title" href="/topic/<%=item.postID%>" title="<%=item.post_name%>">
                <%=item.post_name%>
      		</a>
      		<%}else{%>
      		<a class="myCollect-post-title" href="/topic/<%=item.postID%>" title="<%=item.post_name%>">
      		    <%var postname=''%>
      		    <%for(i=0;i<6;i++){postname=postname+item.post_name[i]}%>
                <%=postname+'...'%>
      		</a>
      		<%}%>
      		<img src="../images/myCollections_02.png">
      		<%if(item.groupName.length<6){%>
      		<span class="mycol-post-groupname"><%=item.groupName%></span>
      		<%}else{%>
      		<span class="mycol-post-groupname">
      		    <%var groupname=''%>
      			<%for(i=0;i<4;i++){ groupname=groupname+item.groupName[i] }%>
      			<%=groupname+'...'%>
      		</span>
      		<%}%>
      		<%if(item.user_name.length<4){%>
      		<span class="mycol-post-creater"><%=item.user_name%></span>
      		<%}else{%>
      		<span class="mycol-post-creater">
      		    <%var username=''%>
      			<%for(i=0;i<2;i++){ username=username+item.user_name[i] }%>
      			<%=username+'...'%>
      		</span>
      		<%}%>
      		<span class="mycol-post-status" data-target="<%=item.postID%>">已收藏</span>
      		<span class="mycol-post-time">收藏于 <%=item.createTime%></span>
      	</li>
      	<%}else{%>
      	<li  class="myCollections-lists" data-id="<%=item.postID%>">
      		<span class="mycol-post-delete">此贴已被删除，点击<button class="mycol-cancel-btn" data-target="<%=item.postID%>">取消收藏</button>，进行操作</span>
      	</li>
      	<%}%>
      	<%})%>
      </ul>
   </div>
   <div class="page-turn">
		<%if(result.currentPage == 1){%>
		<button type="button" class="unCBtn" id="pre">上一页</button>
		<%}else{%>
		<button type="button" id="pre">上一页</button>
		<%}%>
		<span><%=result.currentPage%>/<%=result.pageCount%></span>
		<%if(result.currentPage == result.pageCount){%>
		<button type="button" class="unCBtn" id="next">下一页</button>
		<%}else{%>
		<button type="button" id="next">下一页</button>
		<%}%>
	</div>
   <%}else{%>
   <div class="emptyPage">
		目前还没有收藏哦~~
   </div>
   <%}%>
</div>
<%- include base/baseJS.ejs %>
<script type="text/html" id="mycol-list">
   {{each posts as item i}}
   {{if item.delete==0}}
   <li class="myCollections-lists" data-id="{{item.postID}}">
            {{if item.post_name.length<7}}
      		<a class="myCollect-post-title" href="/topic/{{item.postID}}">
      		{{item.post_name}}
      		</a>
      		{{else}}
      		<a class="myCollect-post-title" href="/topic/{{item.postID}}">
      		{{item.post_name[0]}}{{item.post_name[1]}}{{item.post_name[2]}}{{item.post_name[3]}}{{item.post_name[4]}}{{item.post_name[5]}}...
      		</a>
      		{{/if}}
      		<img src="../images/myCollections_02.png">
      		{{if item.groupName.length<6}}
      		<span class="mycol-post-groupname">{{item.groupName}}</span>
      		{{else}}
      		<span class="mycol-post-groupname">{{item.groupName[0]}}{{item.groupName[1]}}{{item.groupName[2]}}{{item.groupName[3]}}...
      		</span>
      		{{/if}}
      		{{if item.user_name.length<4}}
      		<span class="mycol-post-creater">{{item.user_name}}</span>
      		{{else}}
      		<span class="mycol-post-creater">{{item.user_name[0]}}{{item.user_name[1]}}...
      		</span>
      		{{/if}}
      		<span class="mycol-post-status" data-target="{{item.postID}}">已收藏</span>
      		<span class="mycol-post-time">收藏于{{item.createTime}}</span>
   </li>
   {{else}}
   <li  class="myCollections-lists" data-id="{{item.postID}}">
      		<span class="mycol-post-delete">此贴已被删除，点击<button class="mycol-cancel-btn" data-target="{{item.postID}}">取消收藏</button>，进行操作</span>
   </li>
   {{/if}}
   {{/each}}
</script>
<script>
	(function(){
		var myCollections={
			main:$(".mycol-posts-lists"),
			pre: $("#pre"),
			next: $("#next"),
			page: $(".page-turn").find('span').eq(0),
			loading: $(".loading"),
			pageCount: parseInt("<%=result.pageCount%>"),
			getServerData: function(param, cb) {
				global.getData("/api/getMyCollections", param, cb);
			},
			updateByPage:function(){
				var self = this;
				var pageNow = global.getPageNow();
				self.loading.show();
				self.getServerData({
					currentpage: pageNow
				}, function(data) {
					if (pageNow != global.getPageNow()) {
						return;
					}
					if (data.ret == 200 && data.data && data.data.posts.length > 0) {
						var compiled = template("mycol-list", data.data);
						self.main.html(compiled);
						self.page.text(data.data.currentPage + '/' + data.data.pageCount);
						global.setPageCount(data.data.pageCount);
						self.pre.removeAttr('class');
						self.next.removeAttr('class');
						if (data.data.currentPage == 1) {
							self.pre.addClass('unCBtn');
						}
						if (data.data.currentPage == data.data.pageCount) {
							self.next.addClass('unCBtn')
						}
						self.loading.hide();
						$(window).scrollTop(0);
					} else {
						self.loading.hide();
						sweetAlert('错误', '数据获取失败', 'error');
					}
				});
			},
			cancelCollect:function(){
				var target=$(this).attr('data-target');
				swal({
					          title: '取消收藏',
                    text: '是否取消收藏帖子',
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '确定',
                    cancelButtonText: '取消'
				}).then(function(){
					          $(this).off('click');
                    $(".loading").show();
                    global.subData("/api/uncollectPost",{
                    	post_id: target
                    },function(data){
                    	$(".loading").hide();
                    	if(data.ret == 200 && data.data){
                    		if(data.data.code==1){
                    			sweetAlert({
                                    title: '提示',
                                    text: '帖子取消收藏成功',
                                    type: 'success',
                                    timer: 2000
                                });
                                $('[data-id =' + '"'+target+'"' +']').remove();
                    		}
                    		else{
                    			sweetAlert('错误', data.data.msg, 'error');
                    		}
                    	}
                    	else{
                    		sweetAlert('错误', data.msg, 'error');
                    	}
                    })
				})
			},
			bindEvent:function(){
				var self = this;
				global.setPageCount(self.pageCount);
				global.pageTurning.apply(self,["#pre","#next",self.updateByPage]);
        $(document).on('click', '.mycol-cancel-btn,.mycol-post-status', function(event) {
            self.cancelCollect.apply($(this));
        });
			},
			init:function(){
				this.bindEvent();
			}
		}
		myCollections.init();
	})()
</script>
<%- include base/footer.ejs %>